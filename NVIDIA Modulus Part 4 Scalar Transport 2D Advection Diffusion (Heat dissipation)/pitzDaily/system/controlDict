FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     scalarTransportFoam;

startFrom       latestTime;
startTime       0;
stopAt          endTime;
endTime         10;
deltaT          0.001;  // <-- Ensure this exists

writeControl    timeStep;
writeInterval   100;
purgeWrite      0;


